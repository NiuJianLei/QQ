<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_35"
       >
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/back_white"
           android:layout_marginLeft="@dimen/dp_20"
           android:id="@+id/main2_image"
           />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sp_15"
        android:id="@+id/chongxinfasong"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:textColor="#999999"
        android:layout_marginRight="@dimen/sp_15"
        />
   </RelativeLayout>
    <TextView
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_104"
        android:layout_marginLeft="@dimen/dp_23"
        android:text="请输入验证码"
        android:textSize="@dimen/dp_27"
        android:textColor="#373737"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_83"
        >
        <EditText
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_55"
            android:background="#F1f1f1"
            android:maxLength="1"
            android:id="@+id/et1"
            android:layout_marginRight="@dimen/dp_30"
            android:textSize="@dimen/dp_32"
            android:gravity="center"
            />
        <EditText
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_56"
            android:background="#F1f1f1"
            android:layout_marginRight="@dimen/dp_30"
            android:textSize="@dimen/dp_32"
            android:id="@+id/et2"
            android:gravity="center"
            android:maxLength="1"
            />
        <EditText
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_56"
            android:background="#F1f1f1"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_30"
            android:textSize="@dimen/dp_32"
            android:id="@+id/et3"
            android:maxLength="1"
            />
        <EditText
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_56"
            android:background="#F1f1f1"
            android:layout_marginRight="@dimen/dp_30"
            android:textSize="@dimen/dp_32"
            android:id="@+id/yan"
            android:maxLength="1"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_loding"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_14"
        />



</LinearLayout>
